<style>
#concise-box{
  --color:{{color_text}};
  --colora:{{color_accent}};
  --bg1:{{bg_color1}};
  --bg2:{{bg_color2}};

  display:flex;flex-direction:column;gap:1em;
  width:550px;height:535px;
  font-family:'Courier New',monospace;font-size:14px;
  line-height: 1.5;
  color:var(--color);

  background: url('{{bg_img}}') center/cover, var(--bg1);
  border: 4px solid var(--colora);
  margin:0 auto;padding: 2em;
  box-sizing:border-box
}

#concise-box p{margin:0}

#concise-box .box{
  border:2px solid var(--colora);
}
#concise-box .box.dark{
  padding:0.5em;
  background:rgba(from var(--bg1) r g b / 0.9)
}
#concise-box .box.light{
  padding:1em;
  background:rgba(from var(--bg2) r g b / 0.9)
}

#concise-box .header,
#concise-box .footer{text-align:center}
#concise-box .header>h2{
  margin:0;
  font-size:26px;
  color: var(--colora);
  letter-spacing: 3px;
}

#concise-box .info{
  display:flex;flex-wrap:wrap;gap:1em;
  justify-content:center;
}
#concise-box .info>strong{color:var(--colora)}

#concise-box .bio{
  flex-grow:1;overflow-y:auto;
  text-align:justify
}
#concise-box .bio>p{margin-bottom:0.75em}
</style>




<div id="concise-box">

<!-- header -->
<div class="header box dark">
  <h2>{{title}}</h2>
  <p>{{subtitle}}</p>
</div>

<!-- basic info -->
<div class="info box light">{{#each info}}

  <strong>{{title}}:</strong>{{text}}
{{/each}}</div>

<!-- bio -->
<div class="bio box light">

{{content}}
</div>

<!-- footer -->
<div class="footer box dark">

{{footer}}
</div>

</div>
</div>

